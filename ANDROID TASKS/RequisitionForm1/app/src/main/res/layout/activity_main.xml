<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.drawerlayout.widget.DrawerLayout android:layout_height="50dp"
            android:layout_width="match_parent"
            android:background="@color/grey">
            <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <!-- Your content goes here -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/poshicons15"/>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </androidx.drawerlayout.widget.DrawerLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REQUISITION"
            android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>